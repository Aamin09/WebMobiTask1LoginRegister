@{
    ViewData["Title"] = "Report Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chart-line me-2"></i> Reports Dashboard</h2>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                Total Orders
                            </div>
                            <div class="h5 mb-0 fw-bold text-grey-800">@ViewBag.TotalOrders</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-grey-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                Total Revenue
                            </div>
                            <div class="h5 mb-0 fw-bold text-grey-800">@ViewBag.TotalRevenue.ToString("N2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-inr fa-2x text-grey-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">
                                Total Customers
                            </div>
                            <div class="h5 mb-0 fw-bold text-grey-800">@ViewBag.TotalCustomers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-grey-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                Total Products
                            </div>
                            <div class="h5 mb-0 fw-bold text-grey-800">@ViewBag.TotalProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-grey-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0 fw-bold">Sales Report</h6>
                </div>
                <div class="card-body">
                    <p>View detailes saled data by date range. Analyze revenue trends, order volumes, and more.</p>
                    <a asp-action="SalesReport" asp-area="Admin" asp-asp-controller="Report" class="btn btn-outline-primary">
                        <i class="fas fa-chart-line me-1"></i> View Sales Reports
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0 fw-bold">Product Performace</h6>
                </div>
                <div class="card-body">
                    <p>Analyze product sales, identify top performers, and find opportunities for improvement.</p>
                    <a asp-action="ProductPerformance" asp-area="Admin" asp-asp-controller="Report" class="btn btn-outline-success">
                        <i class="fas fa-box me-1"></i> View Product Performace
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0 fw-bold">Customer Insights</h6>
                </div>
                <div class="card-body">
                    <p>Understand customer behavior, identify loyal customers, and track spending patterns.</p>
                    <a asp-action="CustomerReport" asp-area="Admin" asp-asp-controller="Report" class="btn btn-outline-info">
                        <i class="fas fa-users  me-1"></i> View Customer Reports
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0 fw-bold">Inventory Status</h6>
                </div>
                <div class="card-body">
                    <p>Monitor product inventory, stock levels, and product status across categories.</p>
                    <a asp-action="InventoryReport" asp-area="Admin" asp-asp-controller="Report" class="btn btn-outline-warning">
                        <i class="fas fa-warehouse  me-1"></i> View Inventory Reports
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
