@model Task1LoginRegister.Models.ProductVariant

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["WarningMessage"]
    </div>
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ProductVariant</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VarinatName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VarinatName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VarinatDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VarinatDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SKU)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SKU)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CostPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CostPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProfitPercentage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProfitPercentage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BasePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BasePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountPercentage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiscountPercentage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinalSellingPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinalSellingPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StockQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StockQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Variant Images</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Is Primary</th>
                        <th>Is Variant</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ProductImages != null && Model.ProductImages.Any())
                    {
                        @foreach (var productImage in Model.ProductImages)
                        {
                            <tr>
                                <td>@productImage.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(productImage?.ImageUrl))
                                    {
                                        var fileExtension = System.IO.Path.GetExtension(productImage.ImageUrl)?.ToLower();

                                        if (fileExtension == ".jpg" || fileExtension == ".jpeg" || fileExtension == ".png" || fileExtension == ".gif" || fileExtension == ".webp")
                                        {
                                            // Display image
                                            <img src="@productImage.ImageUrl" alt="Product Image" class="img-thumbnail" style="width: 100px; height: auto;" />
                                        }
                                        else if (fileExtension == ".mp4" || fileExtension == ".webm" || fileExtension == ".ogg")
                                        {
                            // Display Video
                                            <video width="100" height="auto" controls autoplay loop>
                                                <source src="@productImage.ImageUrl" type="video/@fileExtension.Substring(1)">
                                                Your browser does not support the video tag.
                                            </video>
                                        }
                                    }

                                </td>

                                <td>@(productImage.IsPrimaryImage ? "Yes" : "No")</td>
                                <td>@(productImage.IsVariantImage ? "Yes" : "No")</td>
                                <td>
                                    <form method="post" asp-action="DeleteVariantImage" asp-route-imageId="@productImage.Id" asp-route-variantId="@Model.VariantId" onsubmit="return confirm('Are you sure you want to delete this image?');">
                                        <button type="submit" class="btn btn-danger btn-sm btn-table-action">Delete Image</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No images available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Delete Variant</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <strong>Warning:</strong> Deleting this variant will also remove all associated images. This action cannot be undone.
            </div>

            <form method="post" asp-action="DeleteVariant" asp-route-id="@Model.VariantId" onsubmit="return confirm('Are you sure you want to delete this variant and all its images?');">
                <button type="submit" class="btn btn-danger btn-lg w-100 w-sm-auto">Delete variant and Images</button>
            </form>
        </div>
    </div>
</div>
