@model Task1LoginRegister.Models.GstTax

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create GST Tax</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Category</label>
                    <select id="CategoryId" name="CategoryId" class="form-select" required>
                        <option value="">Select Category</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Value">@category.Text</option>
                        }
                    </select>
                    <div class="invalid-feedback">Please select a category.</div>
                </div>

                <div class="mb-3">
                    <label asp-for="SubcategoryId" class="form-label">Subcategory</label>
                    <select asp-for="SubcategoryId" class="form-select" required>
                        <option value="">Select Subcategory</option>
                    </select>
                    <span asp-validation-for="SubcategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CGST" class="form-label">CGST (%)</label>
                    <input asp-for="CGST" class="form-control" type="number" min="0" step="0.01" required />
                    <span asp-validation-for="CGST" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SGST" class="form-label">SGST (%)</label>
                    <input asp-for="SGST" class="form-control" type="number" min="0" step="0.01" required />
                    <span asp-validation-for="SGST" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button type="submit" class="btn btn-success">Create</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   <script src="~/js/categorysubcategoryload.js"></script>
}
