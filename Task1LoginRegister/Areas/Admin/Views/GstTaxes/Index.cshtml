@model IEnumerable<Task1LoginRegister.Models.GstTax>

@{
    ViewData["Title"] = "GST Tax List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h3 class="text-primary">GST Tax List</h3>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Category</th>
                    <th>Subcategory</th>
                    <th>CGST (%)</th>
                    <th>SGST (%)</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Subcategory.Category.Name</td>
                        <td>@item.Subcategory.Name</td>
                        <td>@item.CGST</td>
                        <td>@item.SGST</td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>@item.UpdatedAt.ToString()</td>
                        <td class="d-flex flex-column flex-md-row gap-2 gap-md-0 justify-content-center">
                            <a asp-action="Edit" asp-route-id="@item.GSTId" class="btn btn-warning btn-sm me-md-1 mb-1 mb-md-0">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.GSTId" class="btn btn-info btn-sm me-md-1 mb-1 mb-md-0">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.GSTId" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
