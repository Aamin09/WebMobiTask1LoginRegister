@model IEnumerable<Task1LoginRegister.Models.VariantAttributeValue>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Variant Attribute Values</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="fa fa-plus"></i> Create New
        </a>
    </div>
    <div class="alert alert-info text-center">
        <h5 class="mb-3">Want to Add Attributes and values ?</h5>
        <a asp-action="Index" asp-controller="ProductAttributes" class="btn btn-info text-white btn-md"><i class="fas fa-box-open"></i> Go to Attributes Dashboard</a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductVariant)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductAttributeValue)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ProductVariant?.SKU</td>
                        <td>@item.ProductAttributeValue?.Value</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id" title="View">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>