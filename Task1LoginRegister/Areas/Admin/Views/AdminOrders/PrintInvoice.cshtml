@model Task1LoginRegister.Models.Order
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice #@Model.OrderNumber</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .invoice-header {
            padding-bottom: 20px;
            border-bottom: 1px solid #e0e0e0;
            margin-bottom: 20px;
        }

        .invoice-title {
            font-weight: 600;
            font-size: 24px;
        }

        .invoice-details {
            font-size: 14px;
        }

        .table th {
            font-weight: 600;
        }

        .table-footer {
            font-weight: 600;
        }

        .company-logo {
            max-height: 80px;
        }

        .footer {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
            font-size: 12px;
            color: #6c757d;
        }
        @@media print {
            .no-print

        {
            display: none !important;
        }

        body {
            padding: 0;
            margin: 0;
        }

        .container {
            width: 100%;
            max-width: 100%;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row no-print mb-4">
            <div class="col-12 text-end">
                <button class="btn btn-primary" onclick="window.print()">
                    <i class="fa fa-print"></i> Print Invoice
                </button>
                <button class="btn btn-secondary" onclick="window.close()">
                    Close
                </button>
            </div>
        </div>
        </div>
        </body>
        </html>