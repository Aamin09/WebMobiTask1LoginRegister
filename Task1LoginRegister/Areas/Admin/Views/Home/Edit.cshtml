@model Task1LoginRegister.Models.UserLoginModels

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>
    .img-thumbnail {
        border: 3px solid #007bff;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="card-title text-center mb-0">Edit Profile</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.Photo))
                            {
                                <div class="mb-3">
                                    <img src="~/Images/@Model.Photo" alt="Profile" class="rounded-circle border img-thumbnail" style="width: 120px; height: 120px; object-fit: cover;" />
                                    <p class="text-muted mt-2">Current Profile Picture</p>
                                </div>
                            }
                            <div class="mb-3">
                                <label for="Profile" class="form-label fw-bold">Change Profile Picture</label>
                                <input type="file" class="form-control" id="Profile" name="Profile" />
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                                    <input asp-for="FirstName" class="form-control rounded-3" placeholder="Enter your first name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                                    <input asp-for="LastName" class="form-control rounded-3" placeholder="Enter your last name" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control rounded-3" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                            <input asp-for="Phone" class="form-control rounded-3" placeholder="Enter your phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label fw-bold d-block">Gender</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Gender" value="Male" id="male" />
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Gender" value="Female" id="female" />
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-bold">Role</label>
                            <select asp-for="Role" class="form-select rounded-3">
                                <option value="User">User</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                                    <input asp-for="Password" type="password" class="form-control rounded-3" value="@Model.Password" placeholder="Enter your password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" type="password" value="@Model.ConfirmPassword" class="form-control rounded-3" placeholder="Confirm your password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary py-2 fw-bold">Save Changes</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}