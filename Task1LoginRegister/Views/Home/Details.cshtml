@model Task1LoginRegister.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    var selectedAttributes = ViewBag.SelectedAttributes as Dictionary<string, string> ?? new Dictionary<string, string>();
}


<link href="~/css/featuredproducts.css" rel="stylesheet" />

<style>
    .container-fluid {
        max-width: 100%;
        margin: 0 auto;
        padding: 20px;
    }

    th {
        white-space: nowrap;
    }

    .image-section {
        position: sticky;
        top: 20px;
    }

    .details-section {
        padding: 0 15px;
    }

    .main-product-media {
        max-width: 100%;
        width: 100%;
        height: 500px;
        object-fit: cover;
        border: 2px solid #ddd;
        padding: 5px;
        border-radius: 10px;
    }


    .thumbnail-container {
        display: flex;
        gap: 10px;
        padding: 5px;
        overflow-x: scroll;
        padding-left: 80px;
    }

    .thumbnail-img {
        width: 100px;
        height: 80px;
        cursor: pointer;
        border: 2px solid transparent;
        border-radius: 5px;
        transition: border 0.3s ease-in-out;
        flex-shrink: 0;
    }

        .thumbnail-img:hover {
            border-color: #007bff;
        }

    .btn-buy {
        background-color: #fb641b;
        width: 60%;
        margin-top: 10px;
        border: none;
    }

    .quantity-input {
        border: 1px solid #dee2e6;
        border-radius: 4px;
        width: 60%;
    }

    .quantity-btn {
        border: none;
        background: #f8f9fa;
        padding: 8px 12px;
        cursor: pointer;
        width: 100px;
        transition: background-color 0.2s;
    }

        .quantity-btn:hover {
            background: #e9ecef;
        }

    .form-control {
        text-align: center;
        border: none;
        justify-content: center;
        border-left: 1px solid #dee2e6;
        border-right: 1px solid #dee2e6;
        padding: 8px 0;
    }

    @@media (max-width: 767px) {
        .image-section {
            position: relative;
            top: 0;
        }

        .main-product-media {
            height: 300px;
        }

        .btn-buy,
        .quantity-input {
            width: 100%;
        }

        h2.card-title {
            font-size: 1.25rem;
        }

        h5 {
            font-size: 1.1rem;
        }

        .container-fluid {
            padding: 10px;
        }
    }

    /* Small Mobile Devices */
    @@media (max-width: 576px) {
        .main-product-media {
            height: 250px;
        }

        .thumbnail-img {
            width: 60px;
            height: 45px;
        }

        .details-section, table {
            padding: 0;
            margin: 0;
        }

        .container-fluid {
            padding: 5px;
        }

        .related-products {
            margin: 10px;
        }
    }

    /* Landscape Mode for iPads */
    @@media screen and (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
        .image-section {
            position: sticky;
            top: 20px;
        }

        .main-product-media {
            height: 350px;
        }
    }
</style>

<div class="container-fluid main">
    <div class="row g-0">
        <div class="col-12 col-lg-6">
            <div class="image-section">
                <div class="card">
                    <div class="text-center mb-3">
                        @{
                            var productImages = Model.ProductImages.Where(img => img.ProductId == Model.ProductId && !img.IsVariantImage);
                            if (ViewBag.SelectedVariant != null)
                            {
                                var variantImage = Model.ProductImages.Where(img => img.VariantId == ViewBag.SelectedVariant.VariantId && img.IsVariantImage);
                                if (variantImage.Any())
                                {
                                    productImages = variantImage;
                                }
                            }
                            var firstMedia = productImages.FirstOrDefault();

                        }


                        <div id="mainDisplay">
                            @if (firstMedia != null)
                            {
                                var fileExt = System.IO.Path.GetExtension(firstMedia.ImageUrl)?.ToLower();
                                if (fileExt == ".jpg" || fileExt == ".jpeg" || fileExt == ".png" || fileExt == ".gif" || fileExt == ".webp")
                                {
                                    <img id="mainImage" src="@firstMedia.ImageUrl" class="img-fluid main-product-media" alt="Main Product Image">
                                }
                                else if (fileExt == ".mp4" || fileExt == ".webm" || fileExt == ".ogg")
                                {
                                    <video id="mainVideo" class="img-fluid main-product-media" controls autoplay loop>
                                        <source src="@firstMedia.ImageUrl" type="video/@fileExt.Substring(1)">
                                        Your browser does not support the video tag.
                                    </video>
                                }
                            }
                        </div>

                    </div>

                    <div class="thumbnail-container mt-3 d-flex justify-content-center">
                        @{
                            var thumbnails = Model.ProductImages.Where(img => img.ProductId == Model.ProductId && !img.IsVariantImage);

                            if (ViewBag.SelectedVariant != null)
                            {
                                var variantThumbnails = Model.ProductImages.Where(img => img.VariantId == ViewBag.SelectedVariant.VariantId && img.IsVariantImage);
                                if (variantThumbnails.Any())
                                {
                                    thumbnails = variantThumbnails;
                                }
                            }
                        }
                        @foreach (var media in thumbnails)
                        {
                            var extension = System.IO.Path.GetExtension(media.ImageUrl)?.ToLower();

                            if (extension == ".jpg" || extension == ".jpeg" || extension == ".png" || extension == ".gif" || extension == ".webp")
                            {
                                <img src="@media.ImageUrl" class="thumbnail-img" onclick="changeMainMedia('@media.ImageUrl', 'image')" alt="Thumbnail">
                            }
                            else if (extension == ".mp4" || extension == ".webm" || extension == ".ogg")
                            {
                                <video class="thumbnail-img" onclick="changeMainMedia('@media.ImageUrl', 'video')" muted>
                                    <source src="@media.ImageUrl" type="video/@extension.Substring(1)">
                                </video>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="details-section">
                <div class="card-body">
                    <h2 class="card-title text-dark mb-3">
                        @if (ViewBag.SelectedVariant != null)
                        {
                            @ViewBag.SelectedVariant.VarinatName
                        }
                        else
                        {
                            @Model.Name
                        }
                    </h2>
                    <h5>
                        @if (ViewBag.SelectedVariant != null && !string.IsNullOrEmpty(ViewBag.SelectedVariant.VarinatDescription))
                        {
                            @ViewBag.SelectedVariant.VarinatDescription
                        }
                        else
                        {
                            @Model.ShortDescription
                        }
                    </h5>
                    <h5 class="d-flex gap-3 align-items-center flex-wrap">
                        @if (ViewBag.SelectedVariant != null)
                        {
                            <span class="text-black fw-bold">@ViewBag.SelectedVariant.FinalSellingPrice.ToString("C")</span>
                            <span class="text-muted text-decoration-line-through">@ViewBag.SelectedVariant.BasePrice.ToString("C")</span>
                            <span class="fw-bold btn btn-success">
                                @ViewBag.SelectedVariant.DiscountPercentage.ToString("0")% off
                            </span>
                        }
                        else
                        {

                            <span class="text-black fw-bold">@Model.CalculatedSellingPrice.ToString("C")</span>
                            <span class="text-muted text-decoration-line-through">@Model.Price.ToString("C")</span>
                            <span class="fw-bold btn btn-success">
                                @Model.SellingPricePercent.ToString("0")% off
                            </span>
                        }
                    </h5>
                    <div class="d-block">
                        <div>
                            @if (ViewBag.SelectedVariant != null)
                            {
                                @:You Save @((ViewBag.SelectedVariant.BasePrice - ViewBag.SelectedVariant.FinalSellingPrice).ToString("C"))
                            }
                            else
                            {
                                @:You Save @((Model.Price - Model.CalculatedSellingPrice).ToString("C"))
                            }
                        </div>
                        @{
                            if (Model.DeliveryCharge > 0)
                            {
                                <div class="fw-bold">@Html.DisplayNameFor(m => m.DeliveryCharge) : <span class="text-success">@Model.DeliveryCharge.ToString("C")</span>  </div>
                            }
                            else
                            {
                                <div class="text-success fw-bold">Free Delivery </div>
                            }

                            <div>Get it by : @DateTime.Now.AddDays(2).ToString("dddd, dd MMMM yyyy") </div>
                        }
                        <div class="mt-2">
                            @if (ViewBag.SelectedVariant != null)
                            {
                                @if (ViewBag.SelectedVariant.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">
                                        @ViewBag.SelectedVariant.StockQuantity Item(s) Left in Stock
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        Out of Stock
                                    </span>
                                }
                            }
                            else
                            {
                                @if (Model.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">
                                        @Model.StockQuantity Item(s) Left in Stock
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        Out of Stock
                                    </span>
                                }
                            }
                        </div>

                    </div>
                    <div class="buy-details mb-4 mt-3">
                        @{
                            bool inStock = ViewBag.SelectedVariant != null
                            ? ViewBag.SelectedVariant.StockQuantity > 0
                            : Model.StockQuantity > 0;

                            int maxStock = ViewBag.SelectedVariant != null
                            ? ViewBag.SelectedVariant.StockQuantity
                            : Model.StockQuantity;
                        }
                        @if (inStock)
                        {
                            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                <div class="quantity-input d-flex mb-2">
                                    <input type="hidden" name="productId" value="@Model.ProductId" />
                                    @if (ViewBag.SelectedVariant != null)
                                    {
                                        <input type="hidden" name="variantId" value="@ViewBag.SelectedVariant.VariantId" />
                                    }
                                    <!--  include selected attributes -->
                                    @if (ViewBag.SelectedAttributes != null)
                                    {
                                        var attrs = ViewBag.SelectedAttributes as Dictionary<string, string>;
                                        if (attrs != null)
                                        {
                                            foreach (var attr in attrs)
                                            {
                                                <input type="hidden" name="attr_@attr.Key" value="@attr.Value" />
                                            }
                                        }
                                    }
                                    <button type="button" class="quantity-btn minus">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <input type="number" id="quantityInput" name="quantity" min="1"
                                           max="@maxStock" value="1" class="form-control quantity">
                                    <button type="button" class="quantity-btn plus">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>

                                <div>
                                    <button type="submit" class="btn btn-buy text-white">Add To Cart</button>
                                </div>
                            </form>
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger mt-2">
                                    @TempData["ErrorMessage"]
                                </div>
                            }
                            <script>
                                function validateVariantSelection() {
                                    // Check if all attribute groups have a selection
                                    var allSelected = true;
                                    var attributeGroups = document.querySelectorAll('.attribute-group');
                                    var missingAttributes = [];

                                    attributeGroups.forEach(function(group) {
                                        var hasSelection = false;
                                        var groupLabel = group.querySelector('label').innerText.replace(':', '');
                                        var options = group.querySelectorAll('input[type="radio"]');

                                        options.forEach(function(option) {
                                            if (option.checked) {
                                                hasSelection = true;
                                            }
                                        });

                                        if (!hasSelection) {
                                            allSelected = false;
                                            missingAttributes.push(groupLabel);
                                        }
                                    });

                                    if (!allSelected) {
                                        alert("Please select options for: " + missingAttributes.join(', '));
                                    } else {
                                        // If you've selected all attributes but no variant was found
                                        alert("The selected combination is not available. Please choose another option.");
                                        // Optionally, submit the form to let the controller handle it
                                        // document.querySelector('form[asp-action="AddToCart"]').submit();
                                    }
                                }
                            </script>
                        }
                        else
                        {
                            <form asp-action="NotifyWhenAvailable" asp-controller="Product" method="post">
                                <input type="hidden" name="productId" value="@Model.ProductId" />
                                <input type="email" name="email" placeholder="Enter your email" class="form-control mb-2" required />
                                <button type="submit" class="btn btn-warning text-white">
                                    <i class="fas fa-bell"></i> Notify Me When Available
                                </button>
                            </form>
                        }
                    </div>
                    <!-- Debug info - remove in production -->
                    <!-- Debug info - remove in production -->
                    <div class="bg-light p-3 mt-3">
                        <h6>Debug Info:</h6>
                        <p>
                            Selected Attributes:
                            @{
                                if (ViewBag.SelectedAttributes != null)
                                {
                                    var attrs = ViewBag.SelectedAttributes as Dictionary<string, string>;
                                    if (attrs != null)
                                    {
                                        @string.Join(", ", attrs.Select(a => $"{a.Key}: {a.Value}"))
                                        ;
                                    }
                                }
                                else
                                {
                                    <span>No attributes selected</span>
                                }
                            }
                        </p>
                        <p>Selected Variant: @(ViewBag.SelectedVariant?.VariantId ?? 0)</p>
                        <p>Has Variants: @Model.HasVarinats</p>
                        <p>Total Variants: @(Model.ProductVariants?.Count() ?? 0)</p>
                    </div>
                    @if (Model.HasVarinats && Model.ProductVariants?.Any() == true)
                    {
                        <div class="variant-section mb-4 p-3 bg-light border rounded">
                            <h5 class="mb-3">Available Options</h5>
                            <form id="variantForm" method="get" asp-action="Details" asp-asp-controller="Home">
                                <input type="hidden" name="id" value="@Model.ProductId" />
                               
                                @foreach (var attrGroup in ViewBag.AttributeGroups)
                                {
                                    <div class="attribute-group mb-3">
                                        <label class="fw-bold">@attrGroup.Key:</label>
                                        <div class="d-flex flex-wrap">
                                            @foreach (var attrValue in attrGroup.Value)
                                            {
                                                var isSelected = ViewBag.SelectedAttributes.ContainsKey(attrGroup.Key) &&
                                                ViewBag.SelectedAttributes[attrGroup.Key] == attrValue.ValueName;
                                              
                                                
                                                var isDisabled =  !attrValue.IsAvailable || !attrValue.IsCompatible;
                                                <div class="btn-group btn-group-sm">
                                                    <input type="radio"
                                                           name="attr_@attrGroup.Key"
                                                           class="btn-check"
                                                           id="@(attrGroup.Key)_@attrValue.ValueName"
                                                           value="@attrValue.ValueName"
                                                    @(isSelected ? "checked" : "")
                                                    @(isDisabled ? "disabled" : "")
                                                           data-attribute="@attrGroup.Key"
                                                           data-value="@attrValue.ValueName"
                                                           onchange="this.form.submit();" />
                                                    <label class="btn @(isSelected ? "btn-primary" : "btn-outline-secondary") @(isDisabled ? "disabled" : "")"
                                                           for="@(attrGroup.Key)_@attrValue.ValueName">
                                                        @attrValue.ValueName
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                <div class="d-flex justify-content-end mt-3">
                                    <button type="button" id="clearAllBtn" class="btn btn-sm btn-outline-secondary">
                                        Clear All Selections
                                    </button>
                                </div>
                            </form>
                        </div>

                        <script>
                            document.addEventListener('DOMContentLoaded',function(){
                                document.getElementById('clearAllBtn').addEventListener('click',function(){
                                    window.location.href='@Url.Action("Details", "Home", new { id = Model.ProductId })';
                                });
                            });
                        </script>
                    }

                    <div class="product-details">
                        <h3 class="text-dark">Product details</h3>

                        <hr />
                        <table class="table table-borderless">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <td>
                                    @if (ViewBag.SelectedVariant != null)
                                    {
                                        @ViewBag.SelectedVariant.VarinatName
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => model.Name)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Model Number
                                </th>
                                <td>
                                    @if (ViewBag.SelectedVariant != null)
                                    {
                                        @ViewBag.SelectedVariant.SKU
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => model.SKU)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <td>
                                    @if (ViewBag.SelectedVariant != null && !string.IsNullOrEmpty(ViewBag.SelectedVariant.VarinatDescription))
                                    {
                                        @ViewBag.SelectedVariant.VarinatDescription
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => model.Description)
                                    }
                                </td>
                            </tr>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.Category.Name)
                                </td>
                            <tr>
                                <th>
                                        @Html.DisplayNameFor(model => model.Subcategory)
                                </th>
                                <td>
                                        @Html.DisplayFor(model => model.Subcategory.Name)
                                </td>
                            </tr>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="related-products mt-5">
        <h2 class="section-title text-center mb-4">Related Products</h2>
        <div class="row">
            @foreach (var product in ViewBag.relatedProducts)
            {
                <partial name="_ProductPartialView" model="product" view-data='new ViewDataDictionary(ViewData) { { "ColumnClass", "col-lg-3 col-md-4 col-sm-6" } }' />
            }
        </div>
    </div>

    <partial name="_ReviewPartialView" model="Model" />

</div>

@section Scripts {
    <script>
             $(document).ready(function () {
            $(".plus").click(function () {
                let input = $(this).closest(".quantity-input").find(".quantity");
                let newValue = parseInt(input.val()) + 1;
                input.val(newValue).trigger("change");
            });

            $(".minus").click(function () {
                let input = $(this).closest(".quantity-input").find(".quantity");
                let newValue = parseInt(input.val()) - 1;
                if (newValue >= 1) {  // Prevent quantity going below 1
                    input.val(newValue).trigger("change");
                }
            });
        });

    </script>
    <script>
        function changeMainMedia(mediaUrl, type) {
            const mainDisplay = document.getElementById('mainDisplay');

            if (type === 'image') {
                mainDisplay.innerHTML = `<img id="mainImage" src="${mediaUrl}" class="img-fluid main-product-media" alt="Main Product Image">`;
            } else if (type === 'video') {
                mainDisplay.innerHTML = `
                    <video id="mainVideo" class="img-fluid main-product-media" controls autoplay loop>
                        <source src="${mediaUrl}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                `;
            }
        }
    </script>
}