@model IEnumerable<Task1LoginRegister.Models.Userlogin>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                Status
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    <img src="~/Images/@item.Photo" height="50" width="50" asp-append-version="true" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
                <td>
                    <button class="btn @(item.IsActive ? "btn-danger" : "btn-success")" data-id="@item.Id">
                       @(item.IsActive ? "Deactivate" : "Activate")
                    </button>

                </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
               
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).on("click", ".btn", function () {
            var button = $(this);
            var userId = button.data("id");

            $.ajax({
                type: "POST",
                url: "@Url.Action("ToggleStatus", "Home")",
                data: { id: userId },
                success: function (data) {
                    if (data.isActive) {
                        button.removeClass("btn-success").addClass("btn-danger").text("Deactivate");
                    } else {
                        button.removeClass("btn-danger").addClass("btn-success").text("Activate");
                    }
                }
            });
        });
    </script>
