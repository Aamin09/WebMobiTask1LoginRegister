@model Task1LoginRegister.Models.DeliveryAddress

@{
    ViewData["Title"] = "AddAddress";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add New Address</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddAddress" asp-controller="Profile" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <partial name="_AddressFieldPartial" model="@Model" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="MyProfile" asp-controller="Account" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Address</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
