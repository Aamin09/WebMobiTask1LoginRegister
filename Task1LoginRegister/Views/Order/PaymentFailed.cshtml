@{
    ViewData["Title"] = "Payment Failed";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Payment Failed</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h5>We couldn't process your payment</h5>
                    <p>@ViewBag.ErrorMessage</p>
                    <div class="mt-4">
                        <a href="/Order/ProcessPayment?orderId=@ViewBag.OrderId" class="btn btn-primary me-2">Try Again</a>
                        <a href="/" class="btn btn-outline-secondary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>